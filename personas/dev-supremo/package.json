{
  "name": "dev-supremo-magnanimous",
  "version": "1.0.0",
  "description": "Guardian of Technical Quality - Senior Technical Auditor for Hub Enterprise",
  "main": "dev-supremo.ts",
  "scripts": {
    "dev": "ts-node dev-supremo.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "audit": "ts-node dev-supremo.ts",
    "audit:code": "ts-node dev-supremo.ts --code",
    "audit:architecture": "ts-node dev-supremo.ts --architecture",
    "audit:compliance": "ts-node dev-supremo.ts --compliance",
    "server": "ts-node server.ts",
    "start": "node dist/dev-supremo.js",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write '**/*.ts'",
    "precommit": "lint-staged",
    "metrics": "ts-node metrics.ts",
    "dashboard:serve": "python -m http.server 8000 --directory ./",
    "dev:watch": "ts-node-dev --respawn dev-supremo.ts"
  },
  "keywords": [
    "audit",
    "security",
    "code-review",
    "architecture",
    "compliance",
    "lgpd",
    "gdpr",
    "dev-supremo",
    "hub-enterprise"
  ],
  "author": "Dev Supremo Magn√¢nimo <dev-supremo@hub.enterprise>",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "winston": "^3.13.0",
    "axios": "^1.7.7",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/dotenv": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4",
    "lint-staged": "^15.2.5",
    "husky": "^9.0.11",
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "*.ts",
      "!*.config.ts",
      "!node_modules"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 75,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
