{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AgentOutputContract",
  "type": "object",
  "required": ["agent", "task", "status", "output", "metadata"],
  "properties": {
    "agent": {
      "type": "string",
      "enum": ["produto", "arquitetura", "design", "engenharia", "qa", "ops", "dados"],
      "description": "Nome da persona que executou"
    },
    "task": {
      "type": "string",
      "description": "ID da tarefa executada"
    },
    "status": {
      "type": "string",
      "enum": ["success", "partial", "blocked", "failed"],
      "description": "Status da execução"
    },
    "output": {
      "type": "object",
      "description": "Resultado concreto da tarefa"
    },
    "metadata": {
      "type": "object",
      "required": ["timestamp", "duration_seconds", "next_step", "risks", "artifacts"],
      "properties": {
        "timestamp": { "type": "string", "format": "date-time" },
        "duration_seconds": { "type": "number" },
        "next_step": { "type": "string" },
        "risks": {
          "type": "array",
          "items": { "type": "string" }
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string", "enum": ["file", "folder", "url", "command"] },
              "path": { "type": "string" }
            },
            "required": ["type", "path"]
          }
        },
        "blocked_by": { "type": "string" }
      }
    }
  }
}
